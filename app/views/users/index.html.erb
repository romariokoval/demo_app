<p id="notice"><%= notice %></p>

<h1>Список пользователей</h1>

<table border="1" style="border-collapse:collapse;" cellpadding="5" cellspacing ="5">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Email</th>
      <th colspan="3">Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Показать', user %></td>
        <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить пользователя', new_user_path %>
